<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coded.by.jin.walletmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTransactionActivity"
            android:label="@string/title_activity_add_transaction" >
        </activity>
        <activity
            android:name=".ViewTransactionsActivity"
            android:label="@string/title_activity_view_transactions" >
        </activity>
    </application>

</manifest>
